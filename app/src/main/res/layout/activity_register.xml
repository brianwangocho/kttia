<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/register_root_layout"
        android:orientation="vertical"
        android:padding="20dp"
        tools:context=".registerui.RegisterActivity">

    <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/budgetia"
            android:id="@+id/app_logo"
            android:transitionName="logo_image"
            android:contentDescription="@string/app_name"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/app_logo"
            android:textSize="40sp"
            android:text="@string/sign_up"
    />


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
    >
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_username_layout"
                android:layout_marginBottom="14dp"
                android:hint="enter user number"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/register_username"
                    android:inputType="text"
                    android:transitionName="username-transition"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/register_password_layout"
                android:layout_marginBottom="14dp"
                app:passwordToggleEnabled="true"
                android:hint="enter password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:id="@+id/register_password"
                    android:layout_height="wrap_content"
                    android:transitionName="password-transition"
            />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="14dp"
                android:id="@+id/login_confirm_password_layout"
                app:passwordToggleEnabled="true"
                android:hint="enter password"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"

        >
            <com.google.android.material.textfield.TextInputEditText
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:id="@+id/register_confirm_password"
                    android:layout_height="wrap_content"
                    android:transitionName="password-transition"
            />
        </com.google.android.material.textfield.TextInputLayout>





        <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/signupButton"
                android:text="@string/sign_up"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton.Icon"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginBottom="5dp"
                android:transitionName="button-transition"

        />

    </LinearLayout>


</LinearLayout>